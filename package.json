{
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "turbo run build",
    "dev": "pnpm run --parallel dev",
    "dev:apps": "turbo run dev --filter='./apps/*'",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "commit": "cz",
    "clean": "pnpm clean:node-modules & pnpm clean:turbo-cache",
    "clean:node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:turbo-cache": "rm -rf ./node_modules/.cache",
    "reinstall": "pnpm run clean && rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm run bootstrap",
    "create:app": "plop app"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "prettier": "^2.5.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@mui/styled-engine": "npm:@mui/styled-engine-sc@latest"
  },
  "engines": {
    "node": ">=16.20.0",
    "pnpm": ">=8.6.4"
  },
  "dependencies": {
    "plop": "^4.0.0"
  }
}
